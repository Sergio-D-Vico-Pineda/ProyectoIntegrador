@model IEnumerable<Integrador.Models.Producto>

@{
    ViewData["Title"] = "Escaparate";
}

<h1 class="text-center">
    @if (ViewBag.marca != null)
    {
        <span>@ViewBag.marca</span>
        @if (ViewBag.modelo != null)
        {
            <span>- @ViewBag.modelo</span>
        }
    }
    else
    {
        <span>Escaparate</span>
    }
</h1>

<div class="row gx-3">
    <aside class="col-12 col-md-2">
        @if (ViewBag.marca != null)
        {
            <div class="text-center mb-1 p-2">
                <a asp-action="Index" asp-route-id="" class="p-2 rounded-2 btn btn-primary">Volver al escaparate</a>
            </div>
        }
        @foreach (var marca in (IEnumerable<Marca>)ViewData["ListaMarcas"])
        {
            @if (marca.Modelos.Any())
            {
                <details name="marcas">
                    <summary><a asp-action="Index" asp-route-id="@marca.Id">@marca.Nombre</a></summary>
                    @foreach (var modelo in marca.Modelos)
                    {
                        Producto producto = modelo.Productos.FirstOrDefault();

                        @if (modelo.Productos.Any() && producto.Escaparate)
                        {
                            <span>
                                <a asp-action="Index" asp-route-id="@marca.Id" asp-route-mid="@modelo.Id">@modelo.Nombre</a>
                            </span>
                            @* <p>↑↑ - Hay @modelo.Productos.Count() productos</p> *@
                        }
                        @* else No hay productos de ese modelo *@
                    }
                </details>
            }
            @* else No hay modelos de esa marca *@
        }
    </aside>
    <div class="col-12 col-md-10 overflow-y-auto overflow-x-hidden pt-2" style="max-height:71vh;">
        <div class="row d-flex ps-3 justify-content-evenly gap-3 mb-2">
            @foreach (var item in Model)
            {
                <div class="card position-relative" style="max-width:345px;">

                    <div class="row">
                        @{
                            var nombreImagen = item.Imagen ?? "default.png";
                        }
                        <div class="col-4 d-grid">
                            <div class="my-auto p-1 me-1">
                                <img src="~/img/@nombreImagen" class="col-lg-4" style="width:80px;" height="80" width="80"
                                     asp-append-version="true" alt="Sin imagen" draggable="false" />
                                <span class="text-nowrap">
                                    @Html.DisplayFor(modelItem => item.Modelo.Nombre)
                                </span>
                            </div>
                        </div>
                        <div class="col-8">
                            <div class="p-3 ms-1">
                                <h5 class="card-title">@Html.DisplayFor(modelItem => item.Nombre)</h5>
                                <p class="card-text">
                                    @Html.DisplayFor(modelItem => item.Precio)
                                    @if (User.IsInRole("Proveedor") || User.IsInRole("Administrador"))
                                    {
                                        <br />
                                        @Html.DisplayFor(modelItem => item.Stock)
                                        @if (item.Stock != 1)
                                        {
                                            <span>unidades</span>
                                        }
                                        else
                                        {
                                            <span>unidad</span>
                                        }
                                    }
                                </p>
                                <div class="d-flex gap-2 align-items-center">
                                    @if (User.IsInRole("Administrador"))
                                    {
                                        <a asp-action="Edit" asp-controller="Productos" asp-route-id="@item.Id" class="btn btn-primary">
                                            Editar
                                        </a>
                                    }
                                    else if (User.IsInRole("Proveedor"))
                                    {
                                        <a asp-action="Create" asp-controller="Suministros" asp-route-id="@item.Id" class="btn btn-primary text-nowrap">
                                            Añadir stock
                                        </a>
                                    }
                                    else
                                    {
                                        if (item.Stock > 0)
                                        {
                                            <a asp-action="AgregarCarrito" asp-route-id="@item.Id" class="btn btn-primary text-nowrap">
                                                Añadir
                                            </a>
                                        }
                                        else
                                        {
                                            <span class="btn btn-primary text-nowrap disabled">Sin stock</span>
                                        }
                                    }
                                    <a class="btn btn-secondary text-nowrap" asp-action="Details" asp-controller="Productos" asp-route-id="@item.Id">
                                        Info ℹ
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        var detailsElements = document.querySelectorAll("details");

        detailsElements.forEach(function (details) {
            var spanElements = details.querySelectorAll("span");

            if (spanElements.length === 0) {
                details.remove();
            }
        });
    });
</script>
