@model Integrador.Models.Pedido

@{
    ViewData["Title"] = "Detalles del pedido";
}

<h1>Detalles del pedido</h1>

<div class="row">
    <div class="col-12 col-lg">
        <h4>Pedido</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Id)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Id)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.FechaPedido)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.FechaPedido)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Cliente)
            </dt>
            <dd class="col-sm-8">
                @if (Model.Cliente.Email.EndsWith("-DEL."))
                {
                    <del>@Model.Cliente.Email</del>
                }
                else
                {
                    @Html.DisplayFor(model => model.Cliente.Email)
                }
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Estado)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Estado.Descripcion)
            </dd>

            @* COMENTARIOS *@
            <dt class="col-sm-4">
                @if (Model.Comentarios != null)
                {
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="d-print-none">
                @Html.DisplayNameFor(model => model.Comentarios)
                    </a>
                }
                else
                {
                    @Html.DisplayNameFor(model => model.Comentarios)
                }
            </dt>
            <dd class="col-sm-8">
                @if (Model.Comentarios == null)
                {
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="d-print-none">Añadir comentarios 📝</a>
                }
                else
                {
                    <span>@Html.DisplayFor(model => model.Comentarios)</span>
                }
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.FechaEsperada)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.FechaEsperada)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.FechaConfirmacion)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.FechaConfirmacion)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.FechaEnvio)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.FechaEnvio)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.FechaEntrega)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.FechaEntrega)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.FechaAnulado)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.FechaAnulado)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.FechaDevolucion)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.FechaDevolucion)
            </dd>
        </dl>
    </div>
    @if (Model.DetallePedidos.Count > 0 && Model.Estado.Nombre == "Pendiente")
    {
        <div class="col-12 col-lg-6">
            <h4>Productos del pedido</h4>
            <hr />
            <table class="table border-bottom">
                <tr>
                    <th>
                        Modelo
                    </th>
                    <th>
                        Producto
                    </th>
                    <th>
                        Descripción
                    </th>
                    <th>
                        Cantidad
                    </th>
                    <th>
                        Precio
                    </th>
                    <th></th>
                </tr>
                @foreach (var item in Model.DetallePedidos)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Producto.Modelo.Nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Producto.Nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Producto.Descripcion)
                        </td>
                        <td>
                            @if (item.Cantidad > 1)
                            {
                                <form>
                                    <input class="btn btn-primary" value="-" type="submit" />
                                </form>
                            }
                            @Html.DisplayFor(modelItem => item.Cantidad)
                            <form>
                                <input class="btn btn-primary" value="+" type="submit" />
                            </form>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PrecioUnidad)
                        </td>
                        <td>
                            <div class="d-print-none">
                                <a asp-action="Delete" asp-controller="DetallePedidos"
                                   asp-route-id="@item.Id">Eliminar</a>
                            </div>
                        </td>
                    </tr>
                }
            </table>
            @{
                decimal? total = 0;
                foreach (var item in Model.DetallePedidos)
                {
                    total += item.PrecioUnidad * item.Cantidad;
                }
            }
            <h5>
                Total: @total.ToString() €
            </h5>
        </div>
    }
</div>

<div class="d-print-none text-center d-flex justify-content-evenly">
    <a class="btn btn-primary" href="javascript:window.print()">Imprimir</a>
    <form asp-action="Confirmar" asp-route-id="@Model?.Id">
        <input class="btn btn-primary" type="submit" value="Confirmar" />
    </form>
</div>

<div>
    @if (User.IsInRole("Administrador"))
    {
        <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> <span>|</span>
    }
    <a asp-action="Index">Back to List</a>
</div>