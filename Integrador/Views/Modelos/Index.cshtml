@model IEnumerable<Integrador.Models.Modelo>

@{
    ViewData["Title"] = "Modelos";
}

<h1>Modelos</h1>

@if (User.IsInRole("Administrador"))
{
    <p>
        <a asp-action="Create">Nuevo modelo</a>
    </p>
}

<div style="max-height:68vh; overflow: auto;">
    <table class="table">
        <thead style="position: sticky; top: 0;">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Marca)
                </th>
                <th>
                    Modelo
                </th>
                <th>
                    Núm. Productos
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <a asp-action="Details" asp-controller="Marcas" asp-route-id="@item.MarcaId">
                            @Html.DisplayFor(modelItem => item.Marca.Nombre)
                        </a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @item.Productos.Count
                    </td>
                    <td>
                        @if (User.IsInRole("Administrador"))
                        {
                            <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> <span>|</span>
                            <a asp-action="Details" asp-route-id="@item.Id">Detalles</a> <span>|</span>
                            <a asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                        }
                        else
                        {
                            <a asp-action="Details" asp-route-id="@item.Id">Detalles</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>