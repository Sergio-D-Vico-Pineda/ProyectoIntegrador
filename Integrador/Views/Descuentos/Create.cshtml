@model Integrador.Models.Descuento

@{
    ViewData["Title"] = "Nuevo descuento";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Crear descuento</h2>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Codigo" class="control-label"></label>
                <input asp-for="Codigo" class="form-control" />
                <span asp-validation-for="Codigo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Porcentaje" class="control-label"></label>
                <input asp-for="Porcentaje" class="form-control" />
                <span asp-validation-for="Porcentaje" class="text-danger"></span>
            </div>
            <div class="my-3 d-flex flex-column gap-2">
                <span>¿Está activado?</span>
                <div class="form-check form-switch">
                    <label>
                        <input class="form-check-input" role="switch" asp-for="Activo" checked /> @Html.DisplayNameFor(model => model.Activo)
                    </label>
                </div>
            </div>
            <div class="form-group mt-3">
                <a asp-action="Index">Volver a la lista</a> |
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
