@model Integrador.Models.DetallePedido

@{
    ViewData["Title"] = "Info producto pedido";
}

<h2>Detalles de producto en un pedido</h2>
<hr />

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pedido.Cliente)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pedido.ClienteId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pedido)
        </dt>
        <dd class="col-sm-10">
            <a asp-action="Details" asp-controller="Pedidos" asp-route-id="@Model?.Pedido.Id">
            @Html.DisplayFor(model => model.Pedido.Id)
            </a>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Producto.Modelo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Producto.Modelo.Nombre)
        </dd>
        <dt class="col-sm-2">
            Imagen
        </dt>
        <dd class="col-sm-10">
            @{
                var nombreImagen = Model.Producto.Imagen ?? "default.png";
            }
            <img src="~/img/@nombreImagen" height="175" width="175"
                 asp-append-version="true" alt="Sin imagen" draggable="false" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Producto)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Producto.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Producto.Descripcion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Producto.Descripcion)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cantidad)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cantidad)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PrecioUnidad)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PrecioUnidad)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index">Volver a la lista</a> |
    <a asp-action="Edit" asp-route-id="@Model?.Id">Editar</a>
</div>
