@model Integrador.Models.DetallePedido

@{
    ViewData["Title"] = "Borrar producto del pedido";
}

<h2>¿Estás seguro que quieres borrar esto?</h2>

<div>
    <h4>Producto de un pedido</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pedido.Cliente)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pedido.ClienteId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pedido)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pedido.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Producto.Modelo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Producto.Modelo.Nombre)
        </dd>
        <dt class="col-sm-2">
            Imagen
        </dt>
        <dd class="col-sm-10">
            @{
                var nombreImagen = Model.Producto.Imagen ?? "default.png";
            }
            <img src="~/img/@nombreImagen" height="75" width="75"
                 asp-append-version="true" alt="Sin imagen" draggable="false" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Producto)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Producto.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Producto.Descripcion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Producto.Descripcion)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cantidad)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cantidad)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PrecioUnidad)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PrecioUnidad)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <a asp-action="Index">Volver a la lista</a> |
        <input type="submit" value="Borrar" class="btn btn-danger" />
    </form>
</div>
