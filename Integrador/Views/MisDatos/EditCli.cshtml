@model Integrador.Models.Cliente

@{
    ViewData["Title"] = "Editar Cliente";
    ViewData["ActivePage"] = "Index";
    Layout = "./_Layout.cshtml";
}

<h4>Cliente</h4>
<div class="row">
    <div class="col-md-6">
        <form asp-action="EditCli">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Email" readonly />
            <input type="hidden" asp-for="Nif" readonly />
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" disabled readonly />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nif" class="control-label"></label>
                <input asp-for="Nif" class="form-control" disabled readonly />
                <span asp-validation-for="Nif" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Telefono" class="control-label"></label>
                <input type="tel" asp-for="Telefono" class="form-control" pattern="[0-9]{9}" />
                <span asp-validation-for="Telefono" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Direccion" class="control-label"></label>
                <input asp-for="Direccion" class="form-control" />
                <span asp-validation-for="Direccion" class="text-danger"></span>
            </div>
            <div class="form-group my-3">
                <input type="submit" value="Guardar" class="btn btn-lg btn-primary w-100 text-center" />
            </div>
        </form>
    </div>
    <div class="col-md-6 d-grid justify-content-center">
        <picture>
            <img src="~/img/ads/nerea.webp" width="250" alt="Cliente" class="img-fluid rounded-3">
        </picture>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
