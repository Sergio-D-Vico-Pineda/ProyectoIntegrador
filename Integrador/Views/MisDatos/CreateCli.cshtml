@model Integrador.Models.Cliente

@{
    ViewData["Title"] = "Nuevo cliente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Tus Datos</h1>

<h4>Cliente</h4>
<p>Es necesario completar sus datos antes de poder empezar a utilizar la aplicación web</p>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateCli">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group visually-hidden" hidden>
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" value="@User.Identity.Name" readonly hidden />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nif" class="control-label"></label>
                <input asp-for="Nif" class="form-control" />
                <span asp-validation-for="Nif" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Telefono" class="control-label"></label>
                <input type="tel" asp-for="Telefono" class="form-control" pattern="[0-9]{9}" />
                <span asp-validation-for="Telefono" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Direccion" class="control-label"></label>
                <input asp-for="Direccion" class="form-control" />
                <span asp-validation-for="Direccion" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="col-md-4">
        <img src="~/img/ads/pablo.webp" class="img-fluid" alt="Logo" />
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
